= form_for @authorized_user do |f|
  - if @authorized_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@authorized_user.errors.count, "error")} prohibited this setup from being saved:"
      %ul
        - @authorized_user.errors.full_messages.each do |msg|
          %li= msg
  .rp-control-group
    = f.label :username, 'User Name', class: 'rp-control-label'
    = f.text_field :username
    = f.hidden_field :available_report_id, value: params[:id]
  .actions
    = f.submit 'Save', class: "rp-btn rp-btn-primary"
    = link_to 'Cancel', authorized_users_path(available_report_id: params[:id]), class: "rp-btn"